@inherits System.Web.Mvc.WebViewPage
@using System.Web.Mvc;
@{
    Layout = "~/Views/BaseView/BaseDashboardView.cshtml";
}

<style>
	.tb-header {
		background:#7093DB;
		color:white;	
	}
	.tb-header h3{
		margin-top: 10px;
		margin-bottom: 10px;
	}
	.tb-header p,.tb-content p{
		font-size: 15px;	
	}

	.helper-content{
		font-size: 15px;
	}
	.tb-content{
		padding: 10px;
		overflow: auto;
		height: 100%;
		padding-bottom: 100px; 
	}

	.helper-desc {
		padding-top: 20px;
	}
	.tb-content .col-md-12{
		padding-left: 60px;
		padding-right: 30px;
	}
</style>
<div class="row tb-header" >
	<div class="col-md-12"><h3>{{HelpData.Name}}</h3></div>
	<div class="col-md-12"><p>{{HelpData.Description}}</p></div>
</div>
<div class="row tb-content">
	<div class="col-md-12 helper-content" ng-if="HelpData.ImageFile !== null"><img scr="" src="{{HelpData.ImageFile}}" style="max-height: 300px" ></div>
    <div class="col-md-12 helper-content" ng-repeat="item in HelpData.items">
		<div class="helper-desc" ng-if="item.Name !== '-' ">
			<div class="helper-header"><p><b>{{item.Name}}</b> {{item.Description}}</p>
			</div>
			<div class="helper-img" ng-if="item.ImageFile !== null">
				<img scr="" src="{{item.ImageFile}}" style="max-height: 300px" >
			</div>
		</div>

		<div ng-if="item.Name === '-' " style="padding-left: 20px">
			<div class="helper-header"><p><b>&#9679;</b> {{item.Description}}</p>
			</div>
			<div class="helper-img" ng-if="item.ImageFile !== null">
				<img scr="" src="{{item.ImageFile}}" style="max-height: 300px" >
			</div>
		</div>
    </div>
	<div class="col-md-12 helper-content" ng-if="HelpData.Comment !== null"><b>Tips :</b><p style="padding-left: 20px">{{HelpData.Comment}}</p></div>
</div>